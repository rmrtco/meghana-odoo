     <record id="view_partner_form_rename_vat" model="ir.ui.view">
        <field name="name">res.partner.form.rename.vat.to.gst</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="vat" position="attributes">
                <attribute name="string">GST</attribute>
            </field>
        </field>
    </record>

    <record id="view_partner_form_inherit_replace_image" model="ir.ui.view">
        <field name="name">res.partner.form.replace.image</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Replace the avatar image field -->
            <xpath expr="//field[@name='image_1920']" position="replace">
                <div class="oe_avatar">
                    <div>
                        <field name="image_1920" class="oe_avatar" widget="image" options="{'preview_image': 'avatar_128'}"/>
                    </div>
                    <button type="object" name="action_download_image" class="btn-secondary btn-sm">
                        <i class="fa fa-download" aria-hidden="true"></i>
                    </button>
                </div>
            </xpath>
        </field>
    </record>
    
    <menuitem id="menu_vehicle_root" name="Vehicle Details"/>
    <menuitem id="menu_vehicle" name="Vehicles" parent="menu_vehicle_root"/>
    <menuitem id="menu_vehicle_items" name="Vehicle Records" parent="menu_vehicle" action="action_vehicle"/>
    
  </data>
</odoo>