<odoo>
  <data>
    <record id="res_partner_custom_fields" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.after.vat</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="vat" position="after">
                <field name="pan_number"/>
                <field name="aadhaar_number"/>
            </field>
        </field>
    </record>

    <record id="view_vehicle_tree" model="ir.ui.view">
        <field name="name">devansh_insurance.vehicle.tree</field>
        <field name="model">devansh_insurance.vehicle</field>
        <field name="arch" type="xml">
            <tree string="Vehicles">
                <field name="vehicle_registration_number"/>
                <field name="mobile_number"/>
                <field name="policy_expiry_date"/>
                <field name="rc_number"/>
                <field name="make"/>
                <field name="model"/>
                <field name="owner_id"/>
            </tree>
        </field>
    </record>

        <!-- Form View -->
    <record id="view_vehicle_form" model="ir.ui.view">
        <field name="name">devansh_insurance.vehicle.form</field>
        <field name="model">devansh_insurance.vehicle</field>
        <field name="arch" type="xml">
            <form string="Vehicle Details">
                <sheet>
                    <group>
                        <group>
                            <field name="vehicle_registration_number"/>
                            <field name="mobile_number"/>
                            <field name="rc_number"/>
                            <field name="make"/>
                            <field name="model"/>
                            <field name="policy_expiry_date"/>
                        </group>
                        <group>
                            <field name="idv"/>
                            <field name="invoice_date"/>
                            <field name="policy_from"/>
                            <field name="policy_till"/>
                            <field name="owner_id"/>
                        </group>
                    </group>

                    <group>
                        <field name="address"/>
                        <field name="chassis_no"/>
                        <field name="engine_no"/>
                    </group>
                    <notebook>
                        <page string="RC">
                            <group>
                                 <!-- <div class="o_binary_preview">
                                    <group> -->
                                <field name="rc_photo" filename="rc_photo_filename" widget="image"/>
                                <field name="rc_photo_filename"  readonly="1"/>
                                <button name="action_download_image" type="object" context="{'field_name': 'rc_photo'}" class="btn-primary btn-sm">
                                     <i class="fa fa-download" aria-hidden="true"></i>
                                </button>

                            <!-- </group> -->
                                     <!-- <div class="oe_title">
                                        <t t-call="devansh_insurance.BinaryFilePreview">
                                            <t t-set="field" t-value="'rc_photo'"/>
                                            <t t-set="filename" t-value="'rc_photo_filename'"/>
                                        </t>
                                    </div> -->
                                 <!-- </div> -->
                            </group>
                        </page>
                        <page string="Previous Policy">
                            <group>
                                <field name="previous_year_policy_photo" filename="previous_year_policy_photo_filename" widget="image"/>
                                <field name="previous_year_policy_photo_filename"  readonly="1"/>
                                <button name="action_download_image" type="object" context="{'field_name': 'previous_year_policy_photo'}" class="btn-primary btn-sm">
                                     <i class="fa fa-download" aria-hidden="true"></i>
                                </button>
                            </group>
                        </page>
                        <page string="Inspection Photos">
                            <div class="o_row">
                                <div class="o_col-3">
                                    <div class="o_row">
                                        <field name="inspection_photo_1" filename="inspection_photo_1_filename" widget="image"/>
                                        <field name="inspection_photo_1_filename"  readonly="1"/>
                                        <button name="action_download_image" type="object" context="{'field_name': 'inspection_photo_1'}" class="btn-primary btn-sm">
                                            <i class="fa fa-download" aria-hidden="true"></i>
                                        </button>
                                     </div>
                                </div>
                                <div class="o_col-3">
                                    <div class="o_row">
                                        <field name="inspection_photo_2" filename="inspection_photo_2_filename" widget="image"/>
                                         <field name="inspection_photo_2_filename"  readonly="1"/>
                                        <button name="action_download_image" type="object" context="{'field_name': 'inspection_photo_2'}" class="btn-primary btn-sm">
                                            <i class="fa fa-download" aria-hidden="true"></i>
                                        </button>
                                     </div>
                                </div>
                                <div class="o_col-3">
                                    <div class="o_row">
                                        <field name="inspection_photo_3" filename="inspection_photo_3_filename" widget="image"/>
                                         <field name="inspection_photo_3_filename"  readonly="1"/>
                                        <button name="action_download_image" type="object" context="{'field_name': 'inspection_photo_3'}" class="btn-primary btn-sm">
                                            <i class="fa fa-download" aria-hidden="true"></i>
                                        </button>
                                     </div>
                                </div>
                                <div class="o_col-3">
                                    <div class="o_row">
                                        <field name="inspection_photo_4" filename="inspection_photo_4_filename"  widget="image"/>
                                         <field name="inspection_photo_4_filename"  readonly="1"/>
                                        <button name="action_download_image" type="object" context="{'field_name': 'inspection_photo_4'}" class="btn-primary btn-sm">
                                            <i class="fa fa-download" aria-hidden="true"></i>
                                        </button>
                                     </div>
                                </div>
                            </div>

                            <div class="o_row mt16">
                                <div class="o_col-3">
                                    <div class="o_row">
                                        <field name="inspection_photo_5" filename="inspection_photo_5_filename" widget="image"/>
                                         <field name="inspection_photo_5_filename"  readonly="1"/>
                                        <button name="action_download_image" type="object" context="{'field_name': 'inspection_photo_5'}" class="btn-primary btn-sm">
                                            <i class="fa fa-download" aria-hidden="true"></i>
                                        </button>
                                     </div>
                                </div>
                                <div class="o_col-3">
                                    <div class="o_row">
                                        <field name="inspection_photo_6" filename="inspection_photo_6_filename" widget="image"/>
                                         <field name="inspection_photo_6_filename"  readonly="1"/>
                                        <button name="action_download_image" type="object" context="{'field_name': 'inspection_photo_6'}" class="btn-primary btn-sm">
                                            <i class="fa fa-download" aria-hidden="true"></i>
                                        </button>
                                     </div>
                                </div>
                                <div class="o_col-3">
                                    <div class="o_row">
                                        <field name="inspection_photo_7" filename="inspection_photo_7_filename" widget="image"/>
                                         <field name="inspection_photo_7_filename"  readonly="1"/>
                                        <button name="action_download_image" type="object" context="{'field_name': 'inspection_photo_7'}" class="btn-primary btn-sm">
                                            <i class="fa fa-download" aria-hidden="true"></i>
                                        </button>
                                     </div>
                                </div>
                                <div class="o_col-3">
                                    <div class="o_row">
                                        <field name="inspection_photo_8" filename="inspection_photo_8_filename" widget="image"/>
                                        <field name="inspection_photo_8_filename"  readonly="1"/>
                                        <button name="action_download_image" type="object" context="{'field_name': 'inspection_photo_8'}" class="btn-primary btn-sm">
                                            <i class="fa fa-download" aria-hidden="true"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </page>
\                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_vehicle" model="ir.actions.act_window">
        <field name="name">Vehicles</field>
        <field name="res_model">devansh_insurance.vehicle</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first vehicle
            </p>
        </field>
    </record>

    <record id="view_partner_form_add_vehicles_tab" model="ir.ui.view">
        <field name="name">res.partner.form.vehicles.tab</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
          <xpath expr="//notebook[1]" position="inside">
              <page string="Vehicles" name="vehicles_page">
                  <field name="vehicle_ids" mode="tree,form">
                      <tree>
                          <field name="make"/>
                          <field name="model"/>
                          <field name="idv"/>
                          <field name="invoice_date"/>
                          <field name="policy_from"/>
                          <field name="policy_till"/>
                      </tree>
                  </field>
              </page>
              <page string="Documents" name="docuemnts_page">
                 <div class="o_row">
                    <div class="o_col-3">
                        <div class="o_row">
                            Aadhar card :
                            <field name="aadhar_card_image" filename="aadhar_card_image_filename" widget="image"/>
                            <field name="aadhar_card_image_filename"  readonly="1"/>
                            <button name="action_download_image" type="object" context="{'field_name': 'aadhar_card_image'}" class="btn-primary btn-sm">
                                <i class="fa fa-download" aria-hidden="true"></i>
                            </button>
                        </div>
                    </div>
                    <div class="o_col-3">
                        <div class="o_row">
                            Pan card :
                            <field name="pan_card_image" filename="pan_card_image_filename" widget="image"/>
                            <field name="pan_card_image_filename"  readonly="1"/>
                            <button name="action_download_image" type="object" context="{'field_name': 'pan_card_image'}" class="btn-primary btn-sm">
                                <i class="fa fa-download" aria-hidden="true"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </page>
          </xpath>
        </field>
    </record>

